<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 1. Declara que tu app necesita permiso para usar la cámara -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 2. Declara que la cámara es una característica del hardware -->
    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiTiendita360"
        tools:targetApi="31">
        <activity
            android:name=".SaleDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_sale_detail"
            android:theme="@style/Theme.MiTiendita360" />
        <activity
            android:name=".SaleHistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_sale_history"
            android:theme="@style/Theme.MiTiendita360" />
        <activity
            android:name=".SearchProductActivity"
            android:exported="false"
            android:label="@string/title_activity_search_product"
            android:theme="@style/Theme.MiTiendita360" />
        <activity
            android:name=".SaleInsertActivity"
            android:exported="false"
            android:label="@string/title_activity_sale_insert"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ProductDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/Theme.MiTiendita360" />
        <activity
            android:name=".InventoryActivity"
            android:exported="false"
            android:label="@string/title_activity_inventory"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".SupplierActivity"
            android:exported="false"
            android:label="@string/title_activity_supplier"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".SupplierInsertActivity"
            android:exported="false"
            android:label="@string/title_activity_supplier_insert"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ProductInsertActivity"
            android:exported="false"
            android:label="@string/title_activity_product_insert"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:exported="true"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:label="@string/title_activity_welcome"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".UserRegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".UserLoginActivity"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ProductUpdateActivity"
            android:exported="false"
            android:label="Actualizar Producto"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MiTiendita360"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>